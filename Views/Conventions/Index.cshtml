@model IEnumerable<GestionStages.Models.Convention>

@{
    ViewData["Title"] = "Conventions de stage";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Conventions de stage</h1>
    <a asp-action="Create" class="btn btn-primary">+ Créer une convention</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Étudiant</th>
                    <th>Offre de stage</th>
                    <th>Entreprise</th>
                    <th>Date début</th>
                    <th>Date fin</th>
                    <th>Statut</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>@item.Candidature.Etudiant.Nom @item.Candidature.Etudiant.Prenom</strong>
                        </td>
                        <td>@item.Candidature.OffreStage.Titre</td>
                        <td>@item.Candidature.OffreStage.Entreprise.Nom</td>
                        <td>@item.DateDebut.ToString("dd/MM/yyyy")</td>
                        <td>@item.DateFin.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (item.Statut == "En cours")
                            {
                                <span class="badge bg-primary">🔄 @item.Statut</span>
                            }
                            else if (item.Statut == "Terminée")
                            {
                                <span class="badge bg-success">✓ @item.Statut</span>
                            }
                            else if (item.Statut == "Signée")
                            {
                                <span class="badge bg-info">📝 @item.Statut</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@item.Statut</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Détails">👁️</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Modifier">✏️</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Supprimer">🗑️</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <p class="mb-0">Aucune convention de stage enregistrée.</p>
        <a asp-action="Create" class="btn btn-primary mt-3">+ Créer la première convention</a>
    </div>
}
