@model IEnumerable<GestionStages.Models.Convention>

@{
    ViewData["Title"] = "Conventions de stage";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        @if (User.IsInRole("Admin"))
        {
            <text>📋 Conventions de stage</text>
        }
        else if (User.IsInRole("Etudiant"))
        {
            <text>📄 Ma convention de stage</text>
        }
        else if (User.IsInRole("Entreprise"))
        {
            <text>📄 Conventions de mes stagiaires</text>
        }
    </h1>
    <div>
        <div>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-primary me-2">+ Créer une convention</a>
                <a asp-action="ExportExcel" class="btn btn-success">📥 Exporter en Excel</a>
            }
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model != null && Model.Any())
{
    <!-- FORMULAIRE DE RECHERCHE ET FILTRAGE -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <!-- Barre de recherche -->
                    <div class="col-md-8">
                        <label class="form-label">🔎 Rechercher</label>
                        <input type="text" name="searchString" value="@ViewBag.CurrentSearch" class="form-control"
                               placeholder="@(User.IsInRole("Admin") ? "Rechercher par étudiant, offre, entreprise..." :
                                                    User.IsInRole("Etudiant") ? "Rechercher dans ma convention..." :
                                                    "Rechercher dans mes conventions...")" />
                    </div>

                    <!-- Filtre par statut -->
                    <div class="col-md-2">
                        <label class="form-label">📊 Statut</label>
                        <select name="statutFilter" class="form-select">
                            <option value="">Tous les statuts</option>
                            @foreach (var statut in ViewBag.Statuts)
                            {
                                <option value="@statut" selected="@(statut == ViewBag.CurrentStatut)">
                                    @statut
                                </option>
                            }
                        </select>
                    </div>

                    <!-- Boutons -->
                    <div class="col-md-2 d-flex align-items-end">
                        <div class="btn-group w-100" role="group">
                            <button type="submit" class="btn btn-primary" title="Filtrer">
                                🔍
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary" title="Réinitialiser">
                                ↺
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Affichage du nombre de résultats -->
    @if (!string.IsNullOrEmpty(ViewBag.CurrentSearch) || !string.IsNullOrEmpty(ViewBag.CurrentStatut))
    {
        <div class="alert alert-info">
            <strong>@Model.Count()</strong> convention(s) trouvée(s)
        </div>
    }

    <!-- TABLEAU DES CONVENTIONS -->
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>

                    @if (!User.IsInRole("Etudiant"))
                    {
                        <th>Stagiaire</th>
                    }

                    <th>Offre</th>

                    @if (!User.IsInRole("Entreprise"))
                    {
                        <th>Entreprise</th>
                    }

                    <th>@Html.DisplayNameFor(model => model.DateDebut)</th>
                    <th>@Html.DisplayNameFor(model => model.DateFin)</th>
                    <th>@Html.DisplayNameFor(model => model.Statut)</th>
                    <th>PDF signé</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>

                        @if (!User.IsInRole("Etudiant"))
                        {
                            <td>
                                @Html.DisplayFor(modelItem => item.Candidature.Etudiant.Nom)
                                @Html.DisplayFor(modelItem => item.Candidature.Etudiant.Prenom)
                            </td>
                        }

                        <td>@Html.DisplayFor(modelItem => item.Candidature.OffreStage.Titre)</td>

                        @if (!User.IsInRole("Entreprise"))
                        {
                            <td>@Html.DisplayFor(modelItem => item.Candidature.OffreStage.Entreprise.Nom)</td>
                        }

                    <td>@Html.DisplayFor(modelItem => item.DateDebut, "{0:dd/MM/yyyy}")</td>
                    <td>@Html.DisplayFor(modelItem => item.DateFin, "{0:dd/MM/yyyy}")</td>
                    <td>
                        <span class="badge
                        @(item.Statut == "Signée" ? "bg-info" :
                                                    item.Statut == "En cours" ? "bg-success" :
                                                    "bg-secondary")">
                        @Html.DisplayFor(modelItem => item.Statut)
                    </span>
                </td>
                <td>
                @if (!string.IsNullOrEmpty(item.CheminFichierPDF))
                        {
                            <a asp-action="DownloadPdf" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">📄 Télécharger</a>
                        }
                        else
                        {
                            <span class="text-muted">Non uploadé</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">👁️ Détails</a>

                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">✏️</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm"
                                onclick="return confirm('Supprimer cette convention ?')">🗑️</a>
                        }
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- PAGINATION -->
    @if (ViewBag.TotalConventions > ViewBag.PageSize)
    {
        <nav aria-label="Pagination des conventions" class="mt-5">
            <ul class="pagination justify-content-center">
                <li class="page-item @(ViewBag.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-searchString="@ViewBag.CurrentSearch"
                       asp-route-statutFilter="@ViewBag.CurrentStatut"
                       asp-route-pageNumber="@(ViewBag.PageNumber - 1)">
                        &laquo;
                    </a>
                </li>

                @{
                    int current = ViewBag.PageNumber;
                    int totalPages = (int)Math.Ceiling((double)ViewBag.TotalConventions / ViewBag.PageSize);
                    int start = Math.Max(1, current - 2);
                    int end = Math.Min(totalPages, current + 2);
                }

                @for (int i = start; i <= end; i++)
                {
                    <li class="page-item @(i == current ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-searchString="@ViewBag.CurrentSearch"
                           asp-route-statutFilter="@ViewBag.CurrentStatut"
                           asp-route-pageNumber="@i">@i</a>
                    </li>
                }

                <li class="page-item @(ViewBag.HasNextPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-searchString="@ViewBag.CurrentSearch"
                       asp-route-statutFilter="@ViewBag.CurrentStatut"
                       asp-route-pageNumber="@(ViewBag.PageNumber + 1)">
                        &raquo;
                    </a>
                </li>
            </ul>
            <p class="text-center text-muted small mt-2">
                Page @ViewBag.PageNumber sur @((int)Math.Ceiling((double)ViewBag.TotalConventions / ViewBag.PageSize))
                — @ViewBag.TotalConventions convention(s)
            </p>
        </nav>
    }
}
else
{
    <div class="alert alert-warning text-center">
        @if (!string.IsNullOrEmpty(ViewBag.CurrentSearch) || !string.IsNullOrEmpty(ViewBag.CurrentStatut))
        {
            <h5>😔 Aucune convention trouvée</h5>
            <p class="mb-0">Essayez de modifier vos critères de recherche.</p>
            <a asp-action="Index" class="btn btn-primary mt-2">Voir toutes les conventions</a>
        }
        else
        {
            @if (User.IsInRole("Etudiant"))
            {
                <p>Vous n'avez pas encore de convention de stage.</p>
                <p class="small text-muted">Elle sera créée par l'administration une fois votre candidature acceptée.</p>
            }
            else if (User.IsInRole("Entreprise"))
            {
                <p>Vous n'avez pas encore de convention pour vos stagiaires.</p>
            }
            else
            {
                <p class="mb-0">Aucune convention de stage enregistrée.</p>
                <a asp-action="Create" class="btn btn-primary mt-3">+ Créer la première convention</a>
            }
        }
    </div>
}