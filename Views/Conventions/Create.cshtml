@model GestionStages.Models.Convention

@{
    ViewData["Title"] = "Créer une convention";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Conventions</a></li>
        <li class="breadcrumb-item active">Nouvelle convention</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Créer une nouvelle convention de stage</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Candidature -->
                    <div class="mb-3">
                        <label asp-for="CandidatureId" class="form-label">Candidature acceptée *</label>
                        <select asp-for="CandidatureId" class="form-select" asp-items="ViewBag.CandidatureId">
                            <option value="">-- Sélectionnez une candidature --</option>
                        </select>
                        <span asp-validation-for="CandidatureId" class="text-danger"></span>
                        <small class="text-muted">Seules les candidatures acceptées sont affichées</small>
                    </div>

                    <!-- Date de signature -->
                    <div class="mb-3">
                        <label asp-for="DateSignature" class="form-label">Date de signature *</label>
                        <input type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="DateSignature" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <!-- Date début -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="DateDebut" class="form-label">Date de début du stage *</label>
                            <input asp-for="DateDebut" type="date" class="form-control" />
                            <span asp-validation-for="DateDebut" class="text-danger"></span>
                        </div>

                        <!-- Date fin -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="DateFin" class="form-label">Date de fin du stage *</label>
                            <input asp-for="DateFin" type="date" class="form-control" />
                            <span asp-validation-for="DateFin" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Statut -->
                    <div class="mb-3">
                        <label asp-for="Statut" class="form-label">Statut *</label>
                        <select asp-for="Statut" class="form-select">
                            <option value="Signée">📝 Signée</option>
                            <option value="En cours">🔄 En cours</option>
                            <option value="Terminée">✓ Terminée</option>
                        </select>
                        <span asp-validation-for="Statut" class="text-danger"></span>
                    </div>

                    <!-- Upload fichier PDF -->
                    <div class="mb-3">
                        <label for="pdfFile" class="form-label">Document de convention signé (PDF)</label>
                        <input type="file" id="pdfFile" name="pdfFile" class="form-control" accept=".pdf" />
                        <small class="text-muted">Optionnel - Uploadez le document signé par les 3 parties (max 10 Mo)</small>
                    </div>

                    <!-- Boutons -->
                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">Créer la convention</button>
                        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card bg-light">
            <div class="card-body">
                <h6 class="card-title">💡 Informations</h6>
                <ul class="small mb-0">
                    <li>Seules les candidatures <strong>acceptées</strong> peuvent générer une convention</li>
                    <li>La date de début doit être après la date de signature</li>
                    <li>La date de fin doit être après la date de début</li>
                    <li>Le statut peut être modifié plus tard</li>
                </ul>
            </div>
        </div>

        <div class="alert alert-info mt-3">
            <small><strong>📋 Workflow :</strong> Candidature → Acceptation → Convention → Rapport de stage</small>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
