@model GestionStages.Models.Convention

@{
    ViewData["Title"] = "Modifier la convention";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Conventions</a></li>
        <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">Convention #@Model.Id</a></li>
        <li class="breadcrumb-item active">Modifier</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Modifier la convention #@Model.Id</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CheminFichierPDF" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Candidature -->
                    <div class="mb-3">
                        <label asp-for="CandidatureId" class="form-label">Candidature *</label>
                        <select asp-for="CandidatureId" class="form-select" asp-items="ViewBag.CandidatureId">
                            <option value="">-- Sélectionnez une candidature --</option>
                        </select>
                        <span asp-validation-for="CandidatureId" class="text-danger"></span>
                    </div>

                    <!-- Date de signature -->
                    <div class="mb-3">
                        <label asp-for="DateSignature" class="form-label">Date de signature *</label>
                        <input asp-for="DateSignature" type="date" class="form-control" />
                        <span asp-validation-for="DateSignature" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <!-- Date début -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="DateDebut" class="form-label">Date de début du stage *</label>
                            <input asp-for="DateDebut" type="date" class="form-control" />
                            <span asp-validation-for="DateDebut" class="text-danger"></span>
                        </div>

                        <!-- Date fin -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="DateFin" class="form-label">Date de fin du stage *</label>
                            <input asp-for="DateFin" type="date" class="form-control" />
                            <span asp-validation-for="DateFin" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Statut -->
                    <div class="mb-3">
                        <label asp-for="Statut" class="form-label">Statut *</label>
                        <select asp-for="Statut" class="form-select">
                            <option value="Signée">📝 Signée</option>
                            <option value="En cours">🔄 En cours</option>
                            <option value="Terminée">✓ Terminée</option>
                        </select>
                        <span asp-validation-for="Statut" class="text-danger"></span>
                    </div>

                    <!-- Fichier actuel -->
                    @if (!string.IsNullOrEmpty(Model.CheminFichierPDF))
                    {
                        <div class="mb-3">
                            <label class="form-label">Document actuel</label>
                            <div class="alert alert-info mb-2">
                                <small>
                                    📄 <strong>Convention signée</strong>
                                    <br />
                                    <a href="@Model.CheminFichierPDF" target="_blank" class="btn btn-sm btn-outline-primary mt-2">📥 Télécharger le document</a>
                                </small>
                            </div>
                        </div>
                    }

                    <!-- Upload nouveau fichier PDF -->
                    <div class="mb-3">
                        <label for="pdfFile" class="form-label">
                            @if (!string.IsNullOrEmpty(Model.CheminFichierPDF))
                            {
                                <text>Remplacer le document (optionnel)</text>
                            }
                            else
                            {
                                <text>Document de convention signé (PDF)</text>
                            }
                        </label>
                        <input type="file" id="pdfFile" name="pdfFile" class="form-control" accept=".pdf" />
                        <small class="text-muted">
                            @if (!string.IsNullOrEmpty(Model.CheminFichierPDF))
                            {
                                <text>Laissez vide pour conserver le document actuel</text>
                            }
                            else
                            {
                                <text>Uploadez le document signé (max 10 Mo)</text>
                            }
                        </small>
                    </div>

                    <!-- Boutons -->
                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-warning">Enregistrer les modifications</button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Annuler</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="alert alert-info">
            <h6>ℹ️ Information</h6>
            <p class="small mb-0">Modifiez les dates ou le statut de cette convention selon l'avancement du stage.</p>
        </div>

        <div class="card">
            <div class="card-body">
                <h6 class="card-title">Actions rapides</h6>
                <div class="d-grid gap-2">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">👁️ Voir les détails</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-sm">🗑️ Supprimer</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
