@model IEnumerable<GestionStages.Models.Candidature>

@{
    ViewData["Title"] = "Candidatures";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@(User.IsInRole("Etudiant") ? "Mes candidatures" : User.IsInRole("Entreprise") ? "Candidatures reçues" : "Liste des candidatures")</h1>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">+ Créer une candidature</a>
    }
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Étudiant</th>
                    <th>Offre de stage</th>
                    <th>Date candidature</th>
                    <th>Statut</th>
                    <th>CV</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Etudiant.Nom @item.Etudiant.Prenom</td>
                        <td><strong>@item.OffreStage.Titre</strong></td>
                        <td>@item.DateCandidature.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (item.Statut == "Acceptée")
                            {
                                <span class="badge bg-success">✓ @item.Statut</span>
                            }
                            else if (item.Statut == "Refusée")
                            {
                                <span class="badge bg-danger">✗ @item.Statut</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">⏳ @item.Statut</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.CheminCV))
                            {
                                <a href="@item.CheminCV" target="_blank" class="btn btn-sm btn-outline-info">📄 Voir CV</a>
                            }
                            else
                            {
                                <span class="text-muted small">Aucun CV</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Détails">👁️</a>
                                @if (User.IsInRole("Admin") || User.IsInRole("Etudiant"))
                                {
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Annuler">🗑️</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <p class="mb-0">Aucune candidature trouvée.</p>
        @if (User.IsInRole("Etudiant"))
        {
            <a asp-controller="OffresStages" asp-action="Index" class="btn btn-success mt-3">Parcourir les offres</a>
        }
    </div>
}
