@model IEnumerable<GestionStages.Models.Candidature>

@{
    ViewData["Title"] = "Candidatures";
}

<h1>Candidatures</h1>

<!-- Messages TempData -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        ✅ @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        ❌ @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        ⚠️ @TempData["Warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Bouton Create - Admin et Etudiant seulement -->
@if (User.IsInRole("Admin") || User.IsInRole("Etudiant"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Créer une candidature</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Statut</th>
            <th>Étudiant</th>
            <th>Offre de stage</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DateCandidature)</td>
                <td>
                    @if (item.Statut == "Acceptée")
                    {
                        <span class="badge bg-success">@item.Statut</span>
                    }
                    else if (item.Statut == "Refusée")
                    {
                        <span class="badge bg-danger">@item.Statut</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">@item.Statut</span>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Etudiant.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.OffreStage.Titre)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Détails</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Modifier</a>

                    <!-- Bouton Delete - Seulement Admin -->
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Supprimer</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
