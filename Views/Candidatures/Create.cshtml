@model GestionStages.Models.Candidature

@{
    ViewData["Title"] = "Postuler";
}

<h1>Postuler à une offre de stage</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form method="post" action="/Candidatures/Create" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            @if (User.IsInRole("Etudiant"))
            {
                <!-- Pour l'étudiant : afficher l'offre en texte readonly -->
                <div class="form-group mb-3">
                    <label class="control-label">Offre de stage *</label>
                    @{
                        var selectedValue = (ViewBag.OffreStageId as SelectList)?.SelectedValue?.ToString() ?? "";
                        var offerText = (ViewBag.OffreStageId as SelectList)?
                            .FirstOrDefault(x => x.Value == selectedValue)?.Text ?? "Aucune offre";
                    }
                    <input type="text" class="form-control" value="@offerText" readonly style="background-color: #e9ecef;" />
                    <input type="hidden" name="OffreStageId" value="@selectedValue" />
                </div>
            }
            else
            {
                <!-- Pour l'admin : sélection normale -->
                <div class="form-group mb-3">
                    <label class="control-label">Offre de stage *</label>
                    <select name="OffreStageId" class="form-control" required>
                        <option value="">-- Sélectionnez une offre --</option>
                        @foreach (var item in ViewBag.OffreStageId as SelectList)
                        {
                            <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                        }
                    </select>
                </div>
            }

            <!-- Champs cachés -->
            <input type="hidden" name="DateCandidature" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <input type="hidden" name="Statut" value="En attente" />

            <!-- Upload CV -->
            <div class="form-group mb-3">
                <label for="cvFile" class="control-label">Curriculum Vitae (CV)</label>
                <input type="file" 
                       id="cvFile"
                       name="cvFile" 
                       class="form-control" 
                       accept=".pdf,.doc,.docx" />
                <small class="form-text text-muted">
                    Formats acceptés : PDF, Word (.doc, .docx) • Taille maximale : 5 Mo
                </small>
            </div>

            <!-- Boutons -->
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-success">Postuler</button>
                <a href="/Candidatures/Index" class="btn btn-secondary">Retour</a>
            </div>
        </form>
    </div>
</div>