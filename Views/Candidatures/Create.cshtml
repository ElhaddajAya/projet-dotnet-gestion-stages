@{
    ViewData["Title"] = "Postuler";
    var offre = ViewBag.Offre as GestionStages.Models.OffresStage;
    var etudiant = ViewBag.Etudiant as GestionStages.Models.Etudiant;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="OffresStages" asp-action="Index">Offres de stage</a></li>
        <li class="breadcrumb-item"><a asp-controller="OffresStages" asp-action="Details" asp-route-id="@offre.Id">Offre #@offre.Id</a></li>
        <li class="breadcrumb-item active">Postuler</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">‚úâÔ∏è Postuler √† une offre de stage</h5>
            </div>
            <div class="card-body">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>‚ö†</strong> @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="offreId" value="@offre.Id" />

                    <!-- Informations de l'offre -->
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h6 class="card-title text-primary">üìã Offre s√©lectionn√©e</h6>
                            <p class="mb-1"><strong>Titre :</strong> @offre.Titre</p>
                            <p class="mb-1"><strong>Entreprise :</strong> @offre.Entreprise.Nom</p>
                            <p class="mb-1"><strong>Secteur :</strong> @offre.Entreprise.Secteur</p>
                            <p class="mb-0"><strong>Dur√©e :</strong> @offre.DureeMois mois</p>
                        </div>
                    </div>

                    <!-- Informations du candidat -->
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h6 class="card-title text-primary">üë§ Vos informations</h6>
                            <p class="mb-1"><strong>Nom :</strong> @etudiant.Prenom @etudiant.Nom</p>
                            <p class="mb-1"><strong>Email :</strong> @etudiant.Email</p>
                            <p class="mb-1"><strong>Fili√®re :</strong> @etudiant.Filiere</p>
                            <p class="mb-0"><strong>Niveau :</strong> @etudiant.Niveau</p>
                        </div>
                    </div>

                    <!-- Upload CV -->
                    <div class="mb-4">
                        <label for="cvFile" class="form-label">
                            üìÑ Votre CV (obligatoire) *
                        </label>
                        <input type="file"
                               class="form-control"
                               id="cvFile"
                               name="cvFile"
                               accept=".pdf"
                               required />
                        <div class="form-text">
                            Format accept√© : PDF uniquement ‚Ä¢ Taille maximale : 10 Mo
                        </div>
                    </div>

                    <!-- Message d'information -->
                    <div class="alert alert-info">
                        <h6 class="alert-heading">‚ÑπÔ∏è √Ä savoir</h6>
                        <ul class="mb-0 small">
                            <li>Votre candidature sera envoy√©e imm√©diatement √† l'entreprise</li>
                            <li>Vous recevrez une notification d√®s que l'entreprise examinera votre candidature</li>
                            <li>Vous pourrez suivre le statut de votre candidature dans "Mes candidatures"</li>
                            <li>Vous ne pouvez postuler qu'une seule fois √† la m√™me offre</li>
                        </ul>
                    </div>

                    <!-- Boutons -->
                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-send"></i> Envoyer ma candidature
                        </button>
                        <a asp-controller="OffresStages" asp-action="Details" asp-route-id="@offre.Id" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card bg-warning text-dark mb-3">
            <div class="card-body">
                <h6 class="card-title">‚ö†Ô∏è Conseils importants</h6>
                <ul class="small mb-0">
                    <li>‚úÖ V√©rifiez que votre CV est √† jour</li>
                    <li>‚úÖ Assurez-vous qu'il est au format PDF</li>
                    <li>‚úÖ Relisez votre CV avant l'envoi</li>
                    <li>‚úÖ V√©rifiez vos coordonn√©es</li>
                </ul>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h6 class="card-title">üìä Description de l'offre</h6>
                <p class="small text-muted">@offre.Description</p>
                @if (offre.DateDebutSouhaitee.HasValue)
                {
                    <hr />
                    <p class="small mb-0">
                        <strong>Date de d√©but souhait√©e :</strong><br />
                        @offre.DateDebutSouhaitee.Value.ToString("dd/MM/yyyy")
                    </p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Validation de fichier c√¥t√© client
        document.getElementById('cvFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                // V√©rifier l'extension
                if (!file.name.toLowerCase().endsWith('.pdf')) {
                    alert('‚ö†Ô∏è Seuls les fichiers PDF sont accept√©s.');
                    e.target.value = '';
                    return;
                }
                // V√©rifier la taille (10 Mo max)
                if (file.size > 10 * 1024 * 1024) {
                    alert('‚ö†Ô∏è La taille du fichier ne doit pas d√©passer 10 Mo.');
                    e.target.value = '';
                    return;
                }
            }
        });
    </script>
}
