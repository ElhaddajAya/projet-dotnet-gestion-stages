@model IEnumerable<GestionStages.Models.Entreprise>

@{
    ViewData["Title"] = User.IsInRole("Admin") ? "Liste des entreprises" : "Mon entreprise";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">+ Ajouter une entreprise</a>
    }
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model != null && Model.Any())
{
    @if (User.IsInRole("Admin"))
    {
        <!-- FORMULAIRE DE RECHERCHE ET FILTRAGE (Admin uniquement) -->
        <div class="card mb-4">
            <div class="card-body">
                <form asp-action="Index" method="get">
                    <div class="row g-3">
                        <!-- Barre de recherche -->
                        <div class="col-md-8">
                            <label class="form-label">🔎 Rechercher</label>
                            <input type="text"
                                   name="searchString"
                                   value="@ViewBag.CurrentSearch"
                                   class="form-control"
                                   placeholder="Nom, email, adresse, téléphone..." />
                        </div>

                        <!-- Filtre par secteur -->
                        <div class="col-md-2">
                            <label class="form-label">🏢 Secteur</label>
                            <select name="secteurFilter" class="form-select">
                                <option value="">Tous les secteurs</option>
                                @foreach (var secteur in ViewBag.Secteurs)
                                {
                                    <option value="@secteur" selected="@(secteur == ViewBag.CurrentSecteur)">
                                        @secteur
                                    </option>
                                }
                            </select>
                        </div>

                        <!-- Boutons -->
                        <div class="col-md-2 d-flex align-items-end">
                            <div class="btn-group w-100" role="group">
                                <button type="submit" class="btn btn-primary" title="Filtrer">
                                    🔍
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary" title="Réinitialiser">
                                    ↺
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Affichage du nombre de résultats -->
        @if (!string.IsNullOrEmpty(ViewBag.CurrentSearch) || !string.IsNullOrEmpty(ViewBag.CurrentSecteur))
        {
            <div class="alert alert-info">
                <strong>@Model.Count()</strong> entreprise(s) trouvée(s)
            </div>
        }

        <!-- Vue TABLE pour Admin -->
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Nom</th>
                        <th>Secteur</th>
                        <th>Email</th>
                        <th>Téléphone</th>
                        <th>Ville</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Nom</strong></td>
                            <td>@item.Secteur</td>
                            <td>@item.EmailContact</td>
                            <td>@item.Telephone</td>
                            <td>@(item.Adresse?.Split(',').LastOrDefault()?.Trim() ?? "N/A")</td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Détails">👁️</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Modifier">✏️</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Supprimer">🗑️</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- PAGINATION (seulement pour l'Admin) -->
        @if (User.IsInRole("Admin") && ViewBag.TotalEntreprises > ViewBag.PageSize)
        {
            <nav aria-label="Pagination des entreprises" class="mt-5">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(ViewBag.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-searchString="@ViewBag.CurrentSearch"
                           asp-route-secteurFilter="@ViewBag.CurrentSecteur"
                           asp-route-pageNumber="@(ViewBag.PageNumber - 1)">
                            &laquo;
                        </a>
                    </li>

                    @{
                        int current = ViewBag.PageNumber;
                        int totalPages = (int)Math.Ceiling((double)ViewBag.TotalEntreprises / ViewBag.PageSize);
                        int start = Math.Max(1, current - 2);
                        int end = Math.Min(totalPages, current + 2);
                    }

                    @for (int i = start; i <= end; i++)
                    {
                        <li class="page-item @(i == current ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-searchString="@ViewBag.CurrentSearch"
                               asp-route-secteurFilter="@ViewBag.CurrentSecteur"
                               asp-route-pageNumber="@i">@i</a>
                        </li>
                    }

                    <li class="page-item @(ViewBag.HasNextPage ? "" : "disabled")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-searchString="@ViewBag.CurrentSearch"
                           asp-route-secteurFilter="@ViewBag.CurrentSecteur"
                           asp-route-pageNumber="@(ViewBag.PageNumber + 1)">
                            &raquo;
                        </a>
                    </li>
                </ul>
                <p class="text-center text-muted small mt-2">
                    Page @ViewBag.PageNumber sur @((int)Math.Ceiling((double)ViewBag.TotalEntreprises / ViewBag.PageSize))
                    — @ViewBag.TotalEntreprises entreprise(s)
                </p>
            </nav>
        }
    }
    else
    {
        <!-- Vue CARD pour Entreprise (son profil uniquement) -->
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">📋 Profil de votre entreprise</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3">Nom</dt>
                                <dd class="col-sm-9"><strong>@item.Nom</strong></dd>

                                <dt class="col-sm-3">Secteur</dt>
                                <dd class="col-sm-9">@item.Secteur</dd>

                                <dt class="col-sm-3">Adresse</dt>
                                <dd class="col-sm-9">@item.Adresse</dd>

                                <dt class="col-sm-3">Téléphone</dt>
                                <dd class="col-sm-9">@item.Telephone</dd>

                                <dt class="col-sm-3">Email</dt>
                                <dd class="col-sm-9">@item.EmailContact</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">✏️ Modifier mon profil</a>
                        <a asp-controller="OffresStages" asp-action="Index" class="btn btn-outline-primary">📝 Mes offres</a>
                        <a asp-controller="Candidatures" asp-action="Index" class="btn btn-outline-info">📬 Candidatures reçues</a>
                    </div>

                    <div class="alert alert-info mt-3">
                        <small><strong>💡 Astuce :</strong> Gardez vos informations à jour pour que les étudiants puissent vous contacter facilement.</small>
                    </div>
                </div>
            </div>
        }
    }
}
else
{
    <div class="alert alert-warning text-center">
        @if (!string.IsNullOrEmpty(ViewBag.CurrentSearch) || !string.IsNullOrEmpty(ViewBag.CurrentSecteur))
        {
            <h5>😔 Aucune entreprise trouvée</h5>
            <p class="mb-0">Essayez de modifier vos critères de recherche.</p>
            <a asp-action="Index" class="btn btn-primary mt-2">Voir toutes les entreprises</a>
        }
        else
        {
            <p class="mb-0">Aucune entreprise trouvée.</p>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-primary mt-3">+ Ajouter une entreprise</a>
            }
        }
    </div>
}