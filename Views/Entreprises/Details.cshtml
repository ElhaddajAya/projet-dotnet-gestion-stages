@model GestionStages.Models.Entreprise

@{
    ViewData["Title"] = "Détails de l'entreprise";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Entreprises</a></li>
        <li class="breadcrumb-item active">@Model.Nom</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">🏢 @Model.Nom</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <h6 class="text-uppercase text-muted small mb-2">Secteur d'activité</h6>
                        <p>@Model.Secteur</p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-uppercase text-muted small mb-2">Email de contact</h6>
                        <p><a href="mailto:@Model.EmailContact">@Model.EmailContact</a></p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-uppercase text-muted small mb-2">Téléphone</h6>
                        <p>@Model.Telephone</p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-uppercase text-muted small mb-2">Adresse</h6>
                        <p>@Model.Adresse</p>
                    </div>
                </div>
            </div>
        </div>

        @if (User.IsInRole("Admin"))
        {
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">📊 Statistiques</h6>
                </div>
                <div class="card-body">
                    <p class="text-muted small">Statistiques détaillées disponibles prochainement (nombre d'offres, candidatures, etc.)</p>
                </div>
            </div>
        }
    </div>

    <div class="col-lg-4">
        <div class="d-grid gap-2">
            @if (User.IsInRole("Admin") || User.IsInRole("Entreprise"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">✏️ Modifier</a>
            }
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">🗑️ Supprimer</a>
            }
            <a asp-action="Index" class="btn btn-outline-secondary">← Retour à la liste</a>
        </div>

        @if (User.IsInRole("Entreprise"))
        {
            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="card-title">Actions rapides</h6>
                    <div class="d-grid gap-2">
                        <a asp-controller="OffresStages" asp-action="Index" class="btn btn-outline-primary btn-sm">📝 Mes offres</a>
                        <a asp-controller="OffresStages" asp-action="Create" class="btn btn-outline-success btn-sm">+ Créer une offre</a>
                        <a asp-controller="Candidatures" asp-action="Index" class="btn btn-outline-info btn-sm">📬 Candidatures</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
