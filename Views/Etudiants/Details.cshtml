@model GestionStages.Models.Etudiant

@{
    ViewData["Title"] = "Détails de l'étudiant";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Étudiants</a></li>
        <li class="breadcrumb-item active">@Model.Nom @Model.Prenom</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">👤 @Model.Nom @Model.Prenom</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <h6 class="text-uppercase text-muted small mb-2">Nom</h6>
                        <p>@Model.Nom</p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-uppercase text-muted small mb-2">Prénom</h6>
                        <p>@Model.Prenom</p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-uppercase text-muted small mb-2">Email</h6>
                        <p><a href="mailto:@Model.Email">@Model.Email</a></p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-uppercase text-muted small mb-2">Téléphone</h6>
                        <p>@Model.Telephone</p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-uppercase text-muted small mb-2">Filière</h6>
                        <p>@Model.Filiere</p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-uppercase text-muted small mb-2">Niveau d'études</h6>
                        <p>@Model.Niveau</p>
                    </div>
                </div>
            </div>
        </div>

        @if (User.IsInRole("Admin"))
        {
            <!-- STATISTIQUES ÉTUDIANT -->
            <div class="row mt-4">
                <div class="col-lg-12">
                    <div class="card border-info">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">📊 Statistiques du candidat</h5>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-md-4">
                                    <h4 class="text-primary">@ViewBag.NbCandidatures</h4>
                                    <p class="mb-0">Candidature(s) déposée(s)</p>
                                </div>
                                <div class="col-md-4">
                                    <h4 class="text-success">@ViewBag.NbCandidaturesAcceptees</h4>
                                    <p class="mb-0">Acceptée(s)</p>
                                </div>
                                <div class="col-md-4">
                                    <h4 class="text-warning">@ViewBag.NbCandidaturesEnAttente</h4>
                                    <p class="mb-0">En attente</p>
                                </div>
                            </div>
                            @if (ViewBag.AConventionEnCours == true)
                            {
                                <div class="alert alert-success mt-3 text-center">
                                    <strong>🎉 Stage en cours</strong> (Convention active)
                                </div>
                            }
                            else if (ViewBag.ADejaRapport == true)
                            {
                                <div class="alert alert-info mt-3 text-center">
                                    <strong>📄 Rapport de stage déposé</strong>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="col-lg-4">
        <div class="d-grid gap-2">
            @if (User.IsInRole("Admin") || User.IsInRole("Etudiant"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">✏️ Modifier</a>
            }
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">🗑️ Supprimer</a>
            }
            <a asp-action="Index" class="btn btn-outline-secondary">← Retour à la liste</a>
        </div>

        @if (User.IsInRole("Etudiant"))
        {
            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="card-title">Actions rapides</h6>
                    <div class="d-grid gap-2">
                        <a asp-controller="OffresStages" asp-action="Index" class="btn btn-outline-primary btn-sm">🔍 Offres disponibles</a>
                        <a asp-controller="Candidatures" asp-action="Index" class="btn btn-outline-info btn-sm">📝 Mes candidatures</a>
                        <a asp-controller="RapportStages" asp-action="Index" class="btn btn-outline-secondary btn-sm">📄 Mes rapports</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
