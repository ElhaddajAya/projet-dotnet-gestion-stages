@model IEnumerable<GestionStages.Models.Etudiant>

@{
    ViewData["Title"] = User.IsInRole("Admin") ? "Liste des étudiants" : "Mon profil";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">+ Ajouter un étudiant</a>
    }
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model != null && Model.Any())
{
    @if (User.IsInRole("Admin"))
    {
        <!-- FORMULAIRE DE RECHERCHE ET FILTRAGE (Admin uniquement) -->
        <div class="card mb-4">
            <div class="card-body">
                <form asp-action="Index" method="get">
                    <div class="row g-3">
                        <!-- Barre de recherche -->
                        <div class="col-md-5">
                            <label class="form-label">🔎 Rechercher</label>
                            <input type="text"
                                   name="searchString"
                                   value="@ViewBag.CurrentSearch"
                                   class="form-control"
                                   placeholder="Nom, prénom, email..." />
                        </div>

                        <!-- Filtre par filière -->
                        <div class="col-md-3">
                            <label class="form-label">📚 Filière</label>
                            <select name="filiereFilter" class="form-select">
                                <option value="">Toutes les filières</option>
                                @foreach (var filiere in ViewBag.Filieres)
                                {
                                    <option value="@filiere" selected="@(filiere == ViewBag.CurrentFiliere)">
                                        @filiere
                                    </option>
                                }
                            </select>
                        </div>

                        <!-- Filtre par niveau -->
                        <div class="col-md-2">
                            <label class="form-label">🎓 Niveau</label>
                            <select name="niveauFilter" class="form-select">
                                <option value="">Tous les niveaux</option>
                                @foreach (var niveau in ViewBag.Niveaux)
                                {
                                    <option value="@niveau" selected="@(niveau == ViewBag.CurrentNiveau)">
                                        @niveau
                                    </option>
                                }
                            </select>
                        </div>

                        <!-- Boutons -->
                        <div class="col-md-2 d-flex align-items-end">
                            <div class="btn-group w-100" role="group">
                                <button type="submit" class="btn btn-primary" title="Filtrer">
                                    🔍
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary" title="Réinitialiser">
                                    ↺
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Affichage du nombre de résultats -->
        @if (!string.IsNullOrEmpty(ViewBag.CurrentSearch) ||
                     !string.IsNullOrEmpty(ViewBag.CurrentFiliere) ||
                     !string.IsNullOrEmpty(ViewBag.CurrentNiveau))
        {
            <div class="alert alert-info">
                <strong>@Model.Count()</strong> étudiant(s) trouvé(s)
            </div>
        }

        <!-- Vue TABLE pour Admin -->
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Nom complet</th>
                        <th>Email</th>
                        <th>Téléphone</th>
                        <th>Filière</th>
                        <th>Niveau</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Nom @item.Prenom</strong></td>
                            <td>@item.Email</td>
                            <td>@item.Telephone</td>
                            <td>@item.Filiere</td>
                            <td>@item.Niveau</td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Détails">👁️</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Modifier">✏️</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Supprimer">🗑️</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <!-- Vue CARD pour Étudiant (son profil uniquement) -->
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">👤 Mon profil étudiant</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3">Nom complet</dt>
                                <dd class="col-sm-9"><strong>@item.Nom @item.Prenom</strong></dd>

                                <dt class="col-sm-3">Email</dt>
                                <dd class="col-sm-9">@item.Email</dd>

                                <dt class="col-sm-3">Téléphone</dt>
                                <dd class="col-sm-9">@item.Telephone</dd>

                                <dt class="col-sm-3">Filière</dt>
                                <dd class="col-sm-9">@item.Filiere</dd>

                                <dt class="col-sm-3">Niveau</dt>
                                <dd class="col-sm-9">@item.Niveau</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">✏️ Modifier mon profil</a>
                        <a asp-controller="OffresStages" asp-action="Index" class="btn btn-outline-primary">🔍 Offres disponibles</a>
                        <a asp-controller="Candidatures" asp-action="Index" class="btn btn-outline-info">📝 Mes candidatures</a>
                        <a asp-controller="RapportStages" asp-action="Index" class="btn btn-outline-secondary">📄 Mes rapports</a>
                    </div>

                    <div class="alert alert-success mt-3">
                        <small><strong>💡 Conseil :</strong> Complétez votre profil pour augmenter vos chances d'être contacté par les entreprises.</small>
                    </div>
                </div>
            </div>
        }
    }
}
else
{
    <div class="alert alert-warning text-center">
        @if (!string.IsNullOrEmpty(ViewBag.CurrentSearch) ||
            !string.IsNullOrEmpty(ViewBag.CurrentFiliere) ||
            !string.IsNullOrEmpty(ViewBag.CurrentNiveau))
        {
            <h5>😔 Aucun étudiant trouvé</h5>
            <p class="mb-0">Essayez de modifier vos critères de recherche.</p>
            <a asp-action="Index" class="btn btn-primary mt-2">Voir tous les étudiants</a>
        }
        else
        {
            <p class="mb-0">Aucun étudiant trouvé.</p>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-primary mt-3">+ Ajouter un étudiant</a>
            }
        }
    </div>
}