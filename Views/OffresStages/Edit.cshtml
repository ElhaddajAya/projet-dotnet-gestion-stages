@model GestionStages.Models.OffresStage

@{
    ViewData["Title"] = "Modifier l'offre";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Offres de stage</a></li>
        <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">Offre #@Model.Id</a></li>
        <li class="breadcrumb-item active">Modifier</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Modifier l'offre : @Model.Titre</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    @if (User.IsInRole("Admin"))
                    {
                        <!-- Sélection Entreprise (Admin uniquement) -->
                        <div class="mb-3">
                            <label asp-for="EntrepriseId" class="form-label">Entreprise *</label>
                            <select asp-for="EntrepriseId" class="form-select" asp-items="ViewBag.EntrepriseId">
                                <option value="">-- Sélectionnez une entreprise --</option>
                            </select>
                            <span asp-validation-for="EntrepriseId" class="text-danger"></span>
                        </div>
                    }
                    else
                    {
                        <!-- Entreprise en lecture seule (Entreprise ne peut pas changer) -->
                        var selectedValue = (ViewBag.EntrepriseId as SelectList)?.SelectedValue?.ToString() ?? "";
                        var entrepriseNom = (ViewBag.EntrepriseId as SelectList)?
                        .FirstOrDefault(x => x.Value == selectedValue)?.Text ?? "";

                        <div class="mb-3">
                            <label class="form-label">Entreprise</label>
                            <input type="text" class="form-control" value="@entrepriseNom" readonly style="background-color: #e9ecef;" />
                            <input type="hidden" asp-for="EntrepriseId" value="@selectedValue" />
                        </div>
                    }

                    <!-- Titre -->
                    <div class="mb-3">
                        <label asp-for="Titre" class="form-label">Titre de l'offre *</label>
                        <input asp-for="Titre" class="form-control" />
                        <span asp-validation-for="Titre" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description *</label>
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Durée -->
                    <div class="mb-3">
                        <label asp-for="DureeMois" class="form-label">Durée (en mois) *</label>
                        <input asp-for="DureeMois" type="number" class="form-control" min="1" max="12" />
                        <span asp-validation-for="DureeMois" class="text-danger"></span>
                    </div>

                    <!-- Date de début souhaitée -->
                    <div class="mb-3">
                        <label asp-for="DateDebutSouhaitee" class="form-label">Date de début souhaitée</label>
                        <input asp-for="DateDebutSouhaitee" type="date" class="form-control" />
                        <span asp-validation-for="DateDebutSouhaitee" class="text-danger"></span>
                    </div>

                    <!-- Boutons -->
                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-warning">Enregistrer les modifications</button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Annuler</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="alert alert-info">
            <h6>ℹ️ Information</h6>
            <p class="small mb-0">Les modifications seront immédiatement visibles par les étudiants.</p>
        </div>

        <div class="card">
            <div class="card-body">
                <h6 class="card-title">Actions rapides</h6>
                <div class="d-grid gap-2">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">👁️ Voir l'offre</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-sm">🗑️ Supprimer</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
