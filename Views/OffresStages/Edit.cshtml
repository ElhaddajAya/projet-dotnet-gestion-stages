@model GestionStages.Models.OffresStage

@{
    ViewData["Title"] = "Modifier l'offre";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Offres de stage</a></li>
        <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">Offre #@Model.Id</a></li>
        <li class="breadcrumb-item active">Modifier</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">✏️ Modifier l'offre : @Model.Titre</h5>
                <small>Entreprise : <strong>@ViewBag.NomEntreprise</strong></small>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="EntrepriseId" />
                    <input type="hidden" asp-for="DatePublication" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Titre -->
                    <div class="mb-3">
                        <label asp-for="Titre" class="form-label">Titre de l'offre *</label>
                        <input asp-for="Titre" class="form-control" />
                        <span asp-validation-for="Titre" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description *</label>
                        <textarea asp-for="Description" class="form-control" rows="6"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Durée et Date -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DureeMois" class="form-label">Durée (en mois) *</label>
                            <input asp-for="DureeMois" type="number" class="form-control" min="1" max="12" />
                            <span asp-validation-for="DureeMois" class="text-danger"></span>
                            <small class="text-muted">Entre 1 et 12 mois</small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="DateDebutSouhaitee" class="form-label">Date de début souhaitée</label>
                            <input asp-for="DateDebutSouhaitee" type="date" class="form-control"
                                   value="@(Model.DateDebutSouhaitee.HasValue? Model.DateDebutSouhaitee.Value.ToString("yyyy-MM-dd") : "")" />
                            <span asp-validation-for="DateDebutSouhaitee" class="text-danger"></span>
                            <small class="text-muted">Optionnel</small>
                        </div>
                    </div>

                    <!-- Informations en lecture seule -->
                    <div class="alert alert-light border">
                        <small class="text-muted">
                            📅 <strong>Date de publication :</strong> @Model.DatePublication.ToString("dd/MM/yyyy à HH:mm")
                        </small>
                    </div>

                    <!-- Boutons -->
                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-save"></i> Enregistrer les modifications
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="alert alert-info">
            <h6>ℹ️ Information</h6>
            <p class="small mb-0">Les modifications seront immédiatement visibles par les étudiants.</p>
        </div>

        <div class="card">
            <div class="card-body">
                <h6 class="card-title">📋 Actions rapides</h6>
                <div class="d-grid gap-2">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">
                        👁️ Voir l'offre
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        📋 Retour à la liste
                    </a>
                    <hr />
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-sm">
                        🗑️ Supprimer cette offre
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
