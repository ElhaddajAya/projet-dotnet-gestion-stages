@model GestionStages.Models.OffresStage

@{
    ViewData["Title"] = "Supprimer l'offre";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Offres de stage</a></li>
        <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">Offre #@Model.Id</a></li>
        <li class="breadcrumb-item active">Supprimer</li>
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">⚠️ Confirmer la suppression</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <strong>Attention !</strong> Vous êtes sur le point de supprimer cette offre de stage. Cette action est <strong>irréversible</strong>.
                </div>

                <h6 class="mb-3">Détails de l'offre à supprimer :</h6>

                <dl class="row">
                    <dt class="col-sm-4">Titre</dt>
                    <dd class="col-sm-8"><strong>@Model.Titre</strong></dd>

                    <dt class="col-sm-4">Entreprise</dt>
                    <dd class="col-sm-8">@Model.Entreprise.Nom</dd>

                    <dt class="col-sm-4">Description</dt>
                    <dd class="col-sm-8">@Model.Description</dd>

                    <dt class="col-sm-4">Durée</dt>
                    <dd class="col-sm-8">@Model.DureeMois mois</dd>

                    <dt class="col-sm-4">Date de début</dt>
                    <dd class="col-sm-8">
                        @if (Model.DateDebutSouhaitee.HasValue)
                        {
                            @Model.DateDebutSouhaitee.Value.ToString("dd/MM/yyyy")
                        }
                        else
                        {
                            <span class="text-muted">Non spécifiée</span>
                        }
                    </dd>
                </dl>

                <hr />

                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            🗑️ Oui, supprimer définitivement
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="alert alert-info mt-3">
            <h6>💡 Que se passe-t-il après la suppression ?</h6>
            <ul class="small mb-0">
                <li>L'offre disparaît immédiatement de la liste</li>
                <li>Les étudiants ne pourront plus la voir ni postuler</li>
                <li>Les candidatures existantes seront conservées</li>
            </ul>
        </div>
    </div>
</div>
