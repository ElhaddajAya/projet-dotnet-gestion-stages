@model IEnumerable<GestionStages.Models.OffresStage>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Offres de stage";
}

<h1>Offres de stage disponibles</h1>

<!-- Messages de feedback -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>✓</strong> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>✗</strong> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Bouton créer offre (Admin et Entreprise uniquement) -->
@if (User.IsInRole("Admin") || User.IsInRole("Entreprise"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Créer une offre</a>
    </p>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Entreprise</th>
            <th>Durée (mois)</th>
            <th>Date début</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td><strong>@Html.DisplayFor(modelItem => item.Titre)</strong></td>
                    <td>@Html.DisplayFor(modelItem => item.Entreprise.Nom)</td>
                    <td>@Html.DisplayFor(modelItem => item.DureeMois) mois</td>
                    <td>@(item.DateDebutSouhaitee?.ToString("dd/MM/yyyy") ?? "Non spécifiée")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">👁️ Détails</a>

                        @* Étudiant peut postuler *@
                        @if (User.IsInRole("Etudiant"))
                        {
                            <a asp-controller="Candidatures" asp-action="Create" asp-route-offreId="@item.Id" class="btn btn-sm btn-success">
                                Postuler
                            </a>
                        }

                        @* Admin et Entreprise peuvent modifier/supprimer *@
                        @if (User.IsInRole("Admin") || User.IsInRole("Entreprise"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">✏️ Modifier</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑️ Supprimer</a>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">
                    <em>Aucune offre de stage disponible pour le moment.</em>
                </td>
            </tr>
        }
    </tbody>
</table>
