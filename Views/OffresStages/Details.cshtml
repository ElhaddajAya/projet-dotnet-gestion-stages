@model GestionStages.Models.OffresStage

@{
    ViewData["Title"] = "Détails de l'offre";
}

<h1>Détails de l'offre de stage</h1>

<div>
    <h4>Informations</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Titre</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Titre)</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="col-sm-2">Durée (mois)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DureeMois)</dd>

        <dt class="col-sm-2">Date de début souhaitée</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DateDebutSouhaitee)</dd>

        <dt class="col-sm-2">Entreprise</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Entreprise.Nom)</dd>
    </dl>
</div>

<div>
    <!-- Boutons Edit et Delete - Seulement Admin et Entreprise -->
    @if (User.IsInRole("Admin") || User.IsInRole("Entreprise"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Modifier</a>
        <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">Supprimer</a>
    }

    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
</div>
