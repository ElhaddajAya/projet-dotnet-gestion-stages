@model IEnumerable<GestionStages.Models.RapportStage>

@{
    ViewData["Title"] = User.IsInRole("Admin") ? "Rapports de stage" : "Mes rapports de stage";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>📄 @ViewData["Title"]</h1>
    <div>
        <a asp-action="Create" class="btn btn-primary me-2">+ Créer un rapport</a>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="ExportExcel" class="btn btn-success">📥 Exporter en Excel</a>
        }
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show">
        @TempData["Warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model != null && Model.Any())
{
    <!-- FORMULAIRE DE RECHERCHE -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <!-- Barre de recherche -->
                    <div class="col-md-10">
                        <label class="form-label">
                            🔎 Rechercher
                            @if (User.IsInRole("Admin"))
                            {
                                <small class="text-muted">(titre, étudiant, entreprise, offre)</small>
                            }
                            else
                            {
                                <small class="text-muted">(titre, entreprise)</small>
                            }
                        </label>
                        <input type="text"
                               name="searchString"
                               value="@ViewBag.CurrentSearch"
                               class="form-control"
                               placeholder="@(User.IsInRole("Admin") ? "Titre, nom d'étudiant, entreprise..." : "Titre du rapport, entreprise...")" />
                    </div>

                    <!-- Boutons -->
                    <div class="col-md-2 d-flex align-items-end">
                        <div class="btn-group w-100" role="group">
                            <button type="submit" class="btn btn-primary" title="Rechercher">
                                🔍
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary" title="Réinitialiser">
                                ↺
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Affichage du nombre de résultats -->
    @if (!string.IsNullOrEmpty(ViewBag.CurrentSearch))
    {
        <div class="alert alert-info">
            <strong>@Model.Count()</strong> rapport(s) trouvé(s)
        </div>
    }

    <!-- TABLEAU DES RAPPORTS -->
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Titre</th>
                    @if (User.IsInRole("Admin"))
                    {
                        <th>Étudiant</th>
                    }
                    <th>Convention</th>
                    <th>Date de dépôt</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>@item.Titre</strong>
                            @if (!string.IsNullOrEmpty(item.NomFichier))
                            {
                                <br />
                                <small class="text-success">✓ PDF déposé</small>
                            }
                        </td>
                        @if (User.IsInRole("Admin"))
                        {
                            <td>@item.Convention.Candidature.Etudiant.Nom @item.Convention.Candidature.Etudiant.Prenom</td>
                        }
                        <td>
                            <div>
                                <strong class="text-muted small">@item.Convention.Candidature.OffreStage.Titre</strong>
                                <br />
                                <small class="text-muted">@item.Convention.Candidature.OffreStage.Entreprise.Nom</small>
                            </div>
                        </td>
                        <td>@item.DateDepot.ToString("dd/MM/yyyy")</td>
                        <td class="text-end">
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Détails">👁️</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Modifier">✏️</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Supprimer">🗑️</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- PAGINATION -->
    @if (ViewBag.TotalRapports > ViewBag.PageSize)
    {
        <nav aria-label="Pagination des rapports" class="mt-5">
            <ul class="pagination justify-content-center">
                <li class="page-item @(ViewBag.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-searchString="@ViewBag.CurrentSearch"
                       asp-route-pageNumber="@(ViewBag.PageNumber - 1)">
                        &laquo;
                    </a>
                </li>

                @{
                    int current = ViewBag.PageNumber;
                    int totalPages = (int)Math.Ceiling((double)ViewBag.TotalRapports / ViewBag.PageSize);
                    int start = Math.Max(1, current - 2);
                    int end = Math.Min(totalPages, current + 2);
                }

                @for (int i = start; i <= end; i++)
                {
                    <li class="page-item @(i == current ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-searchString="@ViewBag.CurrentSearch"
                           asp-route-pageNumber="@i">@i</a>
                    </li>
                }

                <li class="page-item @(ViewBag.HasNextPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-searchString="@ViewBag.CurrentSearch"
                       asp-route-pageNumber="@(ViewBag.PageNumber + 1)">
                        &raquo;
                    </a>
                </li>
            </ul>
            <p class="text-center text-muted small mt-2">
                Page @ViewBag.PageNumber sur @((int)Math.Ceiling((double)ViewBag.TotalRapports / ViewBag.PageSize))
                — @ViewBag.TotalRapports rapport(s)
            </p>
        </nav>
    }
}
else
{
    <div class="alert alert-warning text-center">
        @if (!string.IsNullOrEmpty(ViewBag.CurrentSearch))
        {
            <h5>😔 Aucun rapport trouvé</h5>
            <p class="mb-0">Essayez de modifier vos critères de recherche.</p>
            <a asp-action="Index" class="btn btn-primary mt-2">Voir tous les rapports</a>
        }
        else
        {
            @if (User.IsInRole("Etudiant"))
            {
                <p class="mb-0">Vous n'avez pas encore soumis de rapport de stage.</p>
                <p class="small text-muted">Vous devez d'abord avoir une convention de stage active.</p>
            }
            else
            {
                <p class="mb-0">Aucun rapport de stage enregistré.</p>
            }
            <a asp-action="Create" class="btn btn-primary mt-3">+ Créer le premier rapport</a>
        }
    </div>
}