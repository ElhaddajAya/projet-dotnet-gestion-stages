@model IEnumerable<GestionStages.Models.RapportStage>

@{
    ViewData["Title"] = "Rapports de stage";
}

<h1>Rapports de stage</h1>

<!-- Messages TempData -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        ✅ @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        ❌ @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        ⚠️ @TempData["Warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Bouton Create - Admin et Etudiant seulement -->
@if (User.IsInRole("Admin") || User.IsInRole("Etudiant"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Créer un rapport de stage</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Nom du fichier</th>
            <th>Date de dépôt</th>
            <th>Convention</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Titre)</td>
                <td>@Html.DisplayFor(modelItem => item.NomFichier)</td>
                <td>@Html.DisplayFor(modelItem => item.DateDepot)</td>
                <td>Convention #@Html.DisplayFor(modelItem => item.Convention.Id)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Détails</a>

                    @if (User.IsInRole("Admin") || User.IsInRole("Etudiant"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Modifier</a>
                    }

                    <!-- Bouton Delete - Seulement Admin -->
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Supprimer</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
