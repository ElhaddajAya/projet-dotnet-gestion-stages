<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Titre -->
            <div class="form-group mb-3">
                <label asp-for="Titre" class="control-label"></label>
                <input asp-for="Titre" class="form-control" />
                <span asp-validation-for="Titre" class="text-danger"></span>
            </div>

            <!-- Nom du fichier -->
            <div class="form-group mb-3">
                <label asp-for="NomFichier" class="control-label">Nom du fichier</label>
                <input asp-for="NomFichier" class="form-control" placeholder="rapport_stage_2024.pdf" />
                <span asp-validation-for="NomFichier" class="text-danger"></span>
            </div>

            <!-- Date de dépôt -->
            <div class="form-group mb-3">
                <label asp-for="DateDepot" class="control-label">Date de dépôt</label>
                <input asp-for="DateDepot" class="form-control" type="date" />
                <span asp-validation-for="DateDepot" class="text-danger"></span>
            </div>

            <!-- Convention -->
            <div class="form-group mb-3">
                <label asp-for="ConventionId" class="control-label">Convention</label>
                <select asp-for="ConventionId" class="form-control" asp-items="ViewBag.ConventionId">
                    <option value="">-- Sélectionner une convention --</option>
                </select>
                <span asp-validation-for="ConventionId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}