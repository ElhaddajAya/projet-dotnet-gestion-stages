@page
@model LoginModel

@{
    ViewData["Title"] = "Connexion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">
                <div class="row g-0">
                    <!-- Colonne gauche - Formulaire -->
                    <div class="col-md-6 p-5">
                        <div class="text-center mb-4">
                            <h2 class="fw-bold text-primary">🔐 Connexion</h2>
                            <p class="text-muted">Accédez à votre espace personnel</p>
                        </div>

                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <!-- Email -->
                            <div class="mb-3">
                                <label asp-for="Input.Email" class="form-label">Adresse email</label>
                                <div class="input-group">
                                    <span class="input-group-text">📧</span>
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username"
                                           placeholder="exemple@email.com" aria-required="true" />
                                </div>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <!-- Mot de passe -->
                            <div class="mb-3">
                                <label asp-for="Input.Password" class="form-label">Mot de passe</label>
                                <div class="input-group">
                                    <span class="input-group-text">🔒</span>
                                    <input asp-for="Input.Password" type="password" class="form-control"
                                           autocomplete="current-password" placeholder="••••••••" aria-required="true" />
                                </div>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <!-- Se souvenir de moi -->
                            <div class="form-check mb-4">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label" asp-for="Input.RememberMe">
                                    Se souvenir de moi
                                </label>
                            </div>

                            <!-- Bouton connexion -->
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                                <i class="bi bi-box-arrow-in-right"></i> Se connecter
                            </button>

                            <!-- Liens utiles -->
                            <div class="d-grid gap-2">
                                <a asp-page="./ForgotPassword" class="btn btn-outline-secondary btn-sm">
                                    🔑 Mot de passe oublié ?
                                </a>
                            </div>

                            <hr class="my-4" />

                            <!-- Lien inscription -->
                            <div class="text-center">
                                <p class="mb-0">
                                    Pas encore de compte ?
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary fw-bold">
                                        Créer un compte
                                    </a>
                                </p>
                            </div>
                        </form>
                    </div>

                    <!-- Colonne droite - Bienvenue -->
                    <div class="col-md-6 bg-primary text-white p-5 d-flex flex-column justify-content-center">
                        <div class="text-center mb-4">
                            <h1 class="display-4 fw-bold mb-3">👋 Bienvenue !</h1>
                            <p class="lead">Plateforme de gestion des stages</p>
                        </div>

                        <div class="mb-4">
                            <h5 class="fw-bold mb-3">✨ Fonctionnalités</h5>
                            <div class="row g-3">
                                <div class="col-12">
                                    <div class="d-flex align-items-start">
                                        <div class="flex-shrink-0">
                                            <span class="badge bg-white text-primary rounded-circle p-2" style="width: 40px; height: 40px; display: inline-flex; align-items: center; justify-content: center;">
                                                📋
                                            </span>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="fw-bold mb-1">Gestion complète</h6>
                                            <small>Offres, candidatures, conventions et rapports</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-flex align-items-start">
                                        <div class="flex-shrink-0">
                                            <span class="badge bg-white text-primary rounded-circle p-2" style="width: 40px; height: 40px; display: inline-flex; align-items: center; justify-content: center;">
                                                🔔
                                            </span>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="fw-bold mb-1">Suivi en temps réel</h6>
                                            <small>Notifications et mises à jour instantanées</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-flex align-items-start">
                                        <div class="flex-shrink-0">
                                            <span class="badge bg-white text-primary rounded-circle p-2" style="width: 40px; height: 40px; display: inline-flex; align-items: center; justify-content: center;">
                                                📄
                                            </span>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="fw-bold mb-1">Documents PDF</h6>
                                            <small>Upload et téléchargement de CV, rapports et conventions</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-light text-dark mb-0">
                            <small>
                                <strong>💡 Astuce :</strong> Utilisez votre email universitaire ou professionnel
                                pour vous connecter à votre compte.
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Info sécurité -->
            <div class="text-center mt-3">
                <small class="text-muted">
                    <i class="bi bi-shield-check"></i> Connexion sécurisée - Vos données sont protégées
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
