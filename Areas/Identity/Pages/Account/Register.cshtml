@page
@model RegisterModel
@{
    ViewData["Title"] = "Inscription";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <!-- Champ Email -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <!-- Champ Password -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <!-- Champ Password Confirmation -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <!-- Choix du type d'utilisateur -->
            <div class="form-floating mb-3">
                <select asp-for="Input.Role" class="form-control" aria-required="true">
                    <option value="">-- Choisir un type d'utilisateur --</option>
                    <option value="Etudiant">Étudiant</option>
                    <option value="Entreprise">Entreprise</option>
                </select>
                <label asp-for="Input.Role">Type d'utilisateur</label>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>

    <div class="col-md-6">
        <section>
            <h3>Informations</h3>
            <hr />
            <div class="alert alert-info">
                <h5>Types de comptes disponibles :</h5>
                <ul>
                    <li><strong>Étudiant</strong> : Pour consulter les offres de stage et postuler</li>
                    <li><strong>Entreprise</strong> : Pour publier des offres de stage et gérer les candidatures</li>
                </ul>
                <p class="mb-0"><small>Le compte Admin est réservé aux administrateurs du système.</small></p>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
