@page
@model RegisterModel
@{
    ViewData["Title"] = "Créer un compte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">
                <div class="row g-0">
                    <!-- Colonne gauche - Formulaire -->
                    <div class="col-md-6 p-5">
                        <div class="text-center mb-4">
                            <h2 class="fw-bold text-primary">📝 Inscription</h2>
                            <p class="text-muted">Créez votre compte pour accéder à la plateforme</p>
                        </div>

                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <!-- Type de compte -->
                            <div class="mb-3">
                                <label asp-for="Input.Role" class="form-label fw-bold">Type de compte *</label>
                                <select asp-for="Input.Role" class="form-select form-select-lg" aria-required="true">
                                    <option value="">-- Choisissez votre profil --</option>
                                    <option value="Etudiant">👤 Étudiant</option>
                                    <option value="Entreprise">🏢 Entreprise</option>
                                </select>
                                <span asp-validation-for="Input.Role" class="text-danger"></span>
                            </div>

                            <!-- Email -->
                            <div class="mb-3">
                                <label asp-for="Input.Email" class="form-label">Adresse email *</label>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username"
                                       placeholder="exemple@email.com" aria-required="true" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <!-- Mot de passe -->
                            <div class="mb-3">
                                <label asp-for="Input.Password" class="form-label">Mot de passe *</label>
                                <input asp-for="Input.Password" type="password" class="form-control"
                                       autocomplete="new-password" placeholder="••••••••" aria-required="true" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                <small class="text-muted">Minimum 6 caractères</small>
                            </div>

                            <!-- Confirmation mot de passe -->
                            <div class="mb-4">
                                <label asp-for="Input.ConfirmPassword" class="form-label">Confirmer le mot de passe *</label>
                                <input asp-for="Input.ConfirmPassword" type="password" class="form-control"
                                       autocomplete="new-password" placeholder="••••••••" aria-required="true" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>

                            <!-- Bouton inscription -->
                            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                                <i class="bi bi-person-plus"></i> Créer mon compte
                            </button>

                            <!-- Lien connexion -->
                            <div class="text-center">
                                <p class="mb-0">Déjà inscrit ? <a asp-page="./Login" class="text-primary fw-bold">Se connecter</a></p>
                            </div>
                        </form>
                    </div>

                    <!-- Colonne droite - Informations -->
                    <div class="col-md-6 bg-primary text-white p-5 d-flex flex-column justify-content-center">
                        <div class="mb-4">
                            <h3 class="fw-bold mb-3">🎓 Gestion des Stages</h3>
                            <p class="lead">Plateforme de gestion complète pour faciliter la recherche et le suivi des stages.</p>
                        </div>

                        <div class="mb-4">
                            <h5 class="fw-bold mb-3">✨ Types de comptes</h5>

                            <div class="mb-3 p-3 bg-white bg-opacity-10 rounded">
                                <h6 class="fw-bold">👤 Compte Étudiant</h6>
                                <ul class="mb-0 small">
                                    <li>Consulter les offres de stage disponibles</li>
                                    <li>Postuler aux offres avec votre CV</li>
                                    <li>Suivre vos candidatures en temps réel</li>
                                    <li>Déposer vos rapports de stage</li>
                                </ul>
                            </div>

                            <div class="p-3 bg-white bg-opacity-10 rounded">
                                <h6 class="fw-bold">🏢 Compte Entreprise</h6>
                                <ul class="mb-0 small">
                                    <li>Publier des offres de stage</li>
                                    <li>Recevoir et gérer les candidatures</li>
                                    <li>Accepter ou refuser les candidats</li>
                                    <li>Suivre vos conventions de stage</li>
                                </ul>
                            </div>
                        </div>

                        <div class="alert alert-light mb-0">
                            <small>
                                <strong>ℹ️ Note :</strong> Après inscription, vous pourrez compléter votre profil
                                avec vos informations détaillées.
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Note administrateur -->
            <div class="text-center mt-3">
                <small class="text-muted">
                    <i class="bi bi-shield-lock"></i> Le compte Administrateur est réservé aux gestionnaires de la plateforme
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
